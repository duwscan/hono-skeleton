{
  "name": "my-app",
  "type": "module",
  "scripts": {
    "betterauth:generate": "npx @better-auth/cli generate --config ./src/config/auth.ts --output ./src/db/schema.ts",
    "db:migrate": "npx drizzle-kit migrate",
    "db:change": "npx drizzle-kit generate",
    "db:pull": "npx drizzle-kit pull",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:view": "concurrently \"pnpm drizzle-kit studio\" \"pnpm dlx drizzle-lab visualizer\" \"sleep 1 && pnpm dlx drizzle-view\""
  },
  "dependencies": {
    "@hono/node-server": "^1.19.4",
    "@hono/standard-validator": "^0.1.5",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.3",
    "@scalar/hono-api-reference": "^0.9.22",
    "@scalar/openapi-to-markdown": "^0.2.45",
    "better-auth": "^1.3.18",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "hono-openapi": "^1.0.8",
    "jose": "^6.1.0",
    "mysql2": "^3.15.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
